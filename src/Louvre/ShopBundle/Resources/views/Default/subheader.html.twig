<h1>{{ 'subheader.title'|trans }}</h1>
<div class="bs-wizard">
    <div class="col-xs-4 bs-wizard-step {% if current == 'first' %} active {% elseif current == 'second' %} complete {% else %}disabled {% endif %}">
        <div class="progress"><div class="progress-bar"></div></div>
        <span class="bs-wizard-dot"></span>
        <div class="text-center bs-wizard-stepnum"><strong>1.</strong> {{ 'subheader.first_step'|trans }}</div>
    </div>

    <div class="col-xs-4 bs-wizard-step {% if current == 'second' %} active {% elseif current == 'third' %} complete {% else %}disabled {% endif %}">
        <div class="progress"><div class="progress-bar"></div></div>
        <span class="bs-wizard-dot"></span>
        <div class="text-center bs-wizard-stepnum"><strong>2.</strong> {{ 'subheader.second_step'|trans }}</div>
    </div>

    <div class="col-xs-4 bs-wizard-step {% if current == 'third' %} complete {% else %}disabled {% endif %}">
        <div class="progress"><div class="progress-bar"></div></div>
        <span class="bs-wizard-dot"></span>
        <div class="text-center bs-wizard-stepnum"><strong>3.</strong> {{ 'subheader.third_step'|trans }}</div>
    </div>
</div>
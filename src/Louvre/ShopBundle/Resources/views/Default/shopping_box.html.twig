<div class="col-md-3" id="sidebar">
    <div class="theiaStickySidebar">
        <div id="cart_box">
            <h3>{{ 'Shopping_box.title'|trans }} <i class="icon_cart_alt pull-right"></i></h3>
            {% if order is defined %}
                <table class="table table_summary">
                    <tbody>
                    <tr>
                        <td class="small"><span class="fa fa-calendar" aria-hidden="true"></span></td>
                        <td><strong class="pull-left resume_date">{{ order.getEntryDate| localizeddate('medium', 'none', app.request.locale, null , 'd MMMM Y' ) }}</strong></td>
                    </tr>
                    <tr>
                        <td class="small"><span class="fa fa-clock-o" aria-hidden="true"></span></td>
                        <td><strong class="pull-left resume_hours">{% if not order.getFullDay %}{{ 'Shopping_box.opening_hours.half'|trans }}{% else %}{{ 'Shopping_box.opening_hours.full'|trans }}{% endif %}</strong></td>
                    </tr>
                    <tr>
                        <td class="small"><span class="fa fa-ticket" aria-hidden="true"></span></td>
                        <td><strong class="pull-left resume_ticket">X{{ order.getVisitors|length }}</strong></td>
                    </tr>
                    </tbody>
                </table>
                <hr />
                <table class="table table_summary">
                    <tbody>
                    {% for visitor in order.getVisitors %}
                        <tr>
                            <td><small><strong>{{ visitor.getType |trans|upper }}</strong><br /> {{ visitor.getName|capitalize  }} {{ visitor.getSurname|capitalize  }}</small></td>
                            <td><strong class="pull-right">{{ visitor.getPrice }}€</strong></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <hr />
                <table class="table table_summary">
                    <tbody>
                    <tr>
                        <td class="total">{{ 'Shopping_box.total'|trans|upper }}<span class="pull-right">{{ order.getTotalPrice }}€</span></td>
                    </tr>
                    </tbody>
                </table>
            {% else %}
                <table class="table table_summary">
                    <tbody>
                    <tr>
                        <td class="small"><span class="fa fa-calendar" aria-hidden="true"></span></td>
                        <td><strong class="pull-left resume_date">-</strong></td>
                    </tr>
                    <tr>
                        <td class="small"><span class="fa fa-clock-o" aria-hidden="true"></span></td>
                        <td><strong class="pull-left resume_hours">{{ 'Shopping_box.opening_hours.full'|trans }}</strong></td>
                    </tr>
                    <tr>
                        <td class="small"><span class="fa fa-ticket" aria-hidden="true"></span></td>
                        <td><strong class="pull-left resume_ticket">X1</strong></td>
                    </tr>
                    </tbody>
                </table>
            {% endif %}
            <hr />
            {% if current == 'first' %}<button type="button" class="btn_full" id="booking_action">{{ 'Shopping_box.action_one'|trans }} <span class="fa fa-angle-double-right" aria-hidden="true"></span></button>{% endif %}
            {% if current == 'second' %}<button type="button" class="btn_full" id="payment_action">{{ 'Shopping_box.action_two'|trans }} <span class="fa fa-angle-double-right" aria-hidden="true"></span></button>{% endif %}
        </div>
    </div>
</div>

